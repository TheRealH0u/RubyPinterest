<div class="container h100">
  <div class="pin-base">
    <div class="pin-photo">
      <%= image_tag(@pin.image) if @pin.image.attached? %>
    </div>

    <div class="pin-info">
      <h2><%= @pin.title %></h2>
      <p><%= @pin.description %></p>
    </div>

    <div class="info">
      <p>
        <strong>Author:</strong>
        <%= @pin.user.name || 'Anonimen avtor'%>
      </p>
    </div>


  </div>

<%= display_show_pin_links(@pin) %>

</div>
