<h1>Pins</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td><%= pin.user.name || 'Anonimous' %></td>
        <td><%= pin.description %></td>
        <td><%= image_tag(pin.image) if pin.image.attached? %></td>
        <%= display_index_pin_links(pin) %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %>
