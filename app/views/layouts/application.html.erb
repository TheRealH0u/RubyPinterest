<!DOCTYPE html>
<html>
  <head>
    <title>RubyPinterest</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <nav class="navbar sticky-top navbar-light bg-light">
      <div class="container h-100">
        <%= link_to "Home", root_path %>
        <div class="d-flex justify-content-between h-100">
          <div class="searchbar">
            <input class="search_input" type="text" name="" placeholder="Search...">
            <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
          </div>
        </div>
        <%= display_session_links %>
      </div>
    </nav>

    <p class="notice" style="color:rgb(37, 173, 55);font-size:16px;margin:0 auto;"><%= notice %></p>
    <p class="alert" style="color:rgb(214, 62, 62);font-size:16px;margin:0 auto;"><%= alert %></p>
    <%= yield %>
  </body>

</html>
